<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Player Form</h1>
    <form>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="player_name">Name</label>
                <input type="text"
                       class="form-control is-invalid"
                       id="player_name"
                       required>
                <div class="invalid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="player_fb_url">Facebook URL</label>
                <input type="text"
                       class="form-control is-valid"
                       id="player_fb_url"
                       required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="player_bios">Bios</label>
            <input type="text"
                   class="form-control is-valid"
                   id="player_bios"
                   disabled>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class="form-group">
            <label for="player_age">Age</label>
            <input type="number"
                   class="form-control is-valid"
                   id="player_age"
                   required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class="form-group">
            <label for="player_about">About</label>
            <textarea class="form-control is-valid"
                      style="resize: none"
                      rows="3"
                      id="player_about"></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <button class="btn btn-primary"
                type="submit">Submit form</button>
    </form>
</div>
<!-- /.container-fluid -->